<Window x:Class="Shell.loginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shell"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="250">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Авторизоваться" FontSize="18" Margin="10" FontWeight="ExtraBold"/>
        <TextBlock Text="Логин" FontSize="16"/>
        <TextBox x:Name="tbLogin" FontSize="16" Text="Admin"/>
        <TextBlock Text="Пароль" FontSize="16"/>
        <PasswordBox x:Name="tbPass" FontSize="16" Password="1234"/>
        <Button x:Name="enterBtn" Content="Войти" FontSize="16" Margin="10" Click="enterBtn_Click"/>
    </StackPanel>
</Window>
